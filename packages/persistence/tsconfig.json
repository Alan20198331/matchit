{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": false,
    "declarationMap": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2015"]
  },
  "include": [
    "src/**/*.ts",
    "./index.ts"
  ],
  "exclude": ["node_modules"]
}
